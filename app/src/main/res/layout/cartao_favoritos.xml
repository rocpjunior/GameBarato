<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartaoJogoView"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:clickable="true"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:strokeColor="#00A5E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFavoritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgJogo"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtNomeJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/roboto_flex"
            android:text="Jogo:"
            android:textColor="#00A5E0"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgJogo"
            app:layout_constraintTop_toTopOf="@+id/imgJogo" />

        <TextView
            android:id="@+id/txtJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nome do Jogo"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/txtNomeJogo"
            app:layout_constraintTop_toTopOf="@+id/imgJogo" />

        <TextView
            android:id="@+id/txtNomePlataforma"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Plataforma Selecionada:"
            android:textColor="#00A5E0"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgJogo"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeJogo" />

        <TextView
            android:id="@+id/txtPlataforma"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nome da Plataforma"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/txtNomePlataforma"
            app:layout_constraintTop_toTopOf="@+id/txtNomePlataforma" />

        <Button
            android:id="@+id/btnFavoritar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_favoritos"
            app:iconGravity="top"
            app:iconTint="#FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#00A5E0"
            android:fontFamily="sans-serif"
            android:text="COMPRAR"
            android:textSize="20sp"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_carrinho"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtPrecoJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/bungee"
            android:text="R$ 0,00"
            android:textColor="#36F796"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/imgJogo"
            app:layout_constraintTop_toBottomOf="@+id/txtNomePlataforma" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
